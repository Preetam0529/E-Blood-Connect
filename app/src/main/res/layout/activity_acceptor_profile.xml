<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- GridLayout to arrange cards in 2 columns -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:rowCount="2">

            <!-- Card 1: Available Units -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_available_units"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFE0B2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Units"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Donor Check-In -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_check_in"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFCDD2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donor Check-In"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Past Records -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_past_records"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#C8E6C9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Past Records"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4: Today Donation -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_today_donation"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#BBDEFB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today Donation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"/>

        <!-- Delete Account Button -->
        <Button
            android:id="@+id/btn_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>
